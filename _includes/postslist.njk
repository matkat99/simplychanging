<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  {% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <h3>
        {% for tag in post.data.tags | filterTagList %}
          {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="fancy-title fancy-title--small">{{ tag }}</a>
        {% endfor %}
      </h3>
      <a href="{{ post.url | url }}" class="postlist-link">
        <h2>
          {% if post.data.title %}
            {{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
        </h2>
      </a>
      <a href="{{ post.url | url }}" class="postlist-image">
        <img src="/{{ post.data.image }}"></a>
        <p>{{ post.data.description }}</p>
        <a href="{{ post.url | url }}" class="more-btn">Continue reading...</a>
        {# <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }} </time> #}
      </li>
    {% endfor %}
  </ol>
